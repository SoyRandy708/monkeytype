<section id="game">
  <time id="time"></time>
  <p id="paragraph"></p>
  <input id="input" autofocus autocomplete="off" />
</section>

<style>
  #game {
    display: grid;
    place-content: center;
    min-height: 90vh;
    padding: 20px;

    time {
      font-size: 25px;
      text-align: center;
      color: var(--color-primary);
    }

    p {
      display: flex;
      flex-wrap: wrap;
      gap: 5px 10px;
      font-size: 20px;
    }

    word {
      border-bottom: 2px solid transparent;
      transition: border-color 0.3s ease-in-out;

      &.marked {
        border-color: var(--text-error);
      }
    }

    letter {
      position: relative;
      display: inline-block;
      color: var(--text-shadow);

      &.active::before {
        content: "|";
        color: var(--color-primary);
        position: absolute;
        left: -50%;
        animation: 1s parpadeo infinite ease-in-out;
      }

      &.is-last::before {
        left: 50%;
      }

      &.correct {
        color: var(--text-correct);
      }

      &.incorrect {
        color: var(--text-error);
      }
    }

    input {
      /* opacity: 0; */
      position: absolute;
      top: 0;
      left: 0;
      pointer-events: none;
    }
  }

  @keyframes parpadeo {
    25% {
      opacity: 1;
    }

    75% {
      opacity: 0;
    }
  }
</style>
