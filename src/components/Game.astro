---
import ButtonReload from "./ButtonReload.astro";
import IconText from "./Icons/IconText.astro";
import IconTime from "./Icons/IconTime.astro";
---

<section id="game">
  <article id="modifiers" class="modifiers">
    <div>
      <ul class="show show_time active">
        <IconTime />
        <li>Tiempo</li>
      </ul>
      <ul class="modifier time">
        <li>15</li>
        <li class="active">30</li>
        <li>60</li>
        <li>120</li>
      </ul>
    </div>
    <div>
      <ul class="show show_words">
        <IconText />
        <li>Palabras</li>
      </ul>

      <ul class="modifier words">
        <li>10</li>
        <li>25</li>
        <li>50</li>
        <li>100</li>
      </ul>
    </div>
  </article>

  <div class="counters">
    <time id="time"></time>
    <p id="word"></p>
  </div>

  <p id="paragraph"></p>
  <input id="input" autofocus autocomplete="off" />

  <ButtonReload />
</section>

<style>
  #game {
    position: relative;
    display: grid;
    justify-items: center;
    place-content: center;
    min-height: 90vh;
    padding: 20px;

    .modifiers {
      display: flex;
      position: absolute;
      width: 100%;
      justify-content: space-around;
      top: 25px;
      background-color: #3f3d3b;
      padding: 10px;
      margin: auto auto 100px auto;
      border-radius: 10px;

      @media (width < 700px) {
        flex-direction: column;
        width: min-content;
      }

      div {
        display: flex;
        justify-content: space-between;
      }

      .show {
        gap: 0;

        &.active {
          color: var(--color-primary);
        }
      }

      .modifier {
        cursor: pointer;
      }

      ul {
        display: flex;
        align-items: center;
        list-style: none;
        gap: 5px;
        padding: 0;
        margin: 0;
        color: var(--text-shadow);

        li {
          padding: 10px;

          &.active {
            color: var(--color-primary);
          }
        }
      }
    }

    .counters {
      text-align: center;
      align-self: end;

      time,
      p {
        display: inline;
        font-size: 25px;
        color: var(--color-primary);
      }

      p {
        display: none;
      }
    }

    p {
      display: flex;
      flex-wrap: wrap;
      align-content: start;
      height: 90px;
      overflow: hidden;
      gap: 5px 10px;
      font-size: 22px;
    }

    word {
      border-bottom: 2px solid transparent;
      transition: border-color 0.3s ease-in-out;
      height: min-content;

      &.marked {
        border-color: var(--text-error);
      }
    }

    letter {
      position: relative;
      display: inline-block;
      color: var(--text-shadow);

      &.active::before {
        content: "|";
        color: var(--color-primary);
        position: absolute;
        left: -50%;
        animation: 1s blinking infinite ease-in-out;
      }

      &.is-last::before {
        left: 50%;
      }

      &.correct {
        color: var(--text-correct);
      }

      &.incorrect {
        color: var(--text-error);
      }
    }

    input {
      opacity: 0;
      position: absolute;
      top: 0;
      left: 0;
      pointer-events: none;
    }
  }

  .hidden {
    animation: fadeIn 0.3s forwards;
  }

  @keyframes blinking {
    25% {
      opacity: 1;
    }

    75% {
      opacity: 0;
    }
  }

  @keyframes fadeIn {
    0% {
      opacity: 100%;
      display: flex;
    }

    100% {
      opacity: 0;
      display: none;
    }
  }
</style>
