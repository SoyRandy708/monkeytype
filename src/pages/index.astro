---
import IconReload from "@/components/IconReload.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="MonkeyType">
  <main>
    <section id="game">
      <h1>Monkey Type</h1>
      <time id="time"></time>
      <p id="paragraph"></p>
      <input id="input" autofocus autocomplete="off" />
    </section>

    <section id="results">
      <div>
        <h2>WPM</h2>
        <h3 class="wpm"></h3>
      </div>

      <div>
        <h2>Currancy</h2>
        <h3 class="currancy"></h3>
      </div>

      <button id="button-reload">
        <IconReload />
      </button>
    </section>

    <!-- TODO: AGREGAR SECCION CON LAS REDES SOCIALES Y PONER DISPLAY GRID EN 3 PARTES -->
  </main>
</Layout>

<script src="@/utils/index.js"></script>

<style>
  main {
    max-width: 800px;
    margin: auto;
  }

  #game {
    display: grid;
    place-content: center;
    min-height: 100vh;
    padding: 20px;

    h1 {
      font-size: 40px;
      text-align: center;
      color: var(--color-primary);
      margin: 75px 0;
    }

    time {
      font-size: 25px;
      text-align: center;
      color: var(--color-primary);
    }

    p {
      display: flex;
      flex-wrap: wrap;
      gap: 5px 10px;
      font-size: 20px;
    }

    word {
      border-bottom: 2px solid transparent;
      transition: border-color 0.3s ease-in-out;

      &.marked {
        border-color: var(--text-error);
      }
    }

    letter {
      position: relative;
      display: inline-block;
      color: var(--text-shadow);

      &.active::before {
        content: "|";
        color: var(--color-primary);
        position: absolute;
        left: -50%;
        animation: 1s parpadeo infinite ease-in-out;
      }

      &.is-last::before {
        left: 50%;
      }

      &.correct {
        color: var(--text-correct);
      }

      &.incorrect {
        color: var(--text-error);
      }
    }

    input {
      opacity: 0;
      position: absolute;
      top: 0;
      left: 0;
      pointer-events: none;
    }
  }

  #results {
    display: none;
    place-content: center;
    gap: 20px;
    min-height: 100vh;
    padding: 20px;

    h2 {
      margin: 0;
      color: var(--text-shadow);
    }

    h3 {
      margin: 0;
      font-size: 40px;
      color: var(--color-primary);
    }

    button {
      background-color: var(--text-correct);
      padding: 5px 10px;
      opacity: 0.8;
      border-radius: 10px;
      cursor: pointer;
      outline: none;
      transition:
        scale 0.3s ease,
        opacity 0.3s ease;

      &:hover {
        scale: 1.1;
        opacity: 1;
      }
    }
  }

  @keyframes parpadeo {
    25% {
      opacity: 1;
    }

    75% {
      opacity: 0;
    }
  }
</style>
